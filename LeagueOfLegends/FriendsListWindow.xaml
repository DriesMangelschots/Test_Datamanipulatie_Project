                            <Separator/>
                            <Button x:Name="BtnLogOut" Click="BtnLogOut_Click" Content="Log Out" />
                        </StackPanel>
                    </materialDesign:PopupBox>
                </StackPanel>
            </Grid>
            <ScrollViewer Background="White">

