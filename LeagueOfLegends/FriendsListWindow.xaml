                                    </Border>
                                    <Border Width="10" Height="10" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" CornerRadius="15" Background="Green" Margin="0,0,4.6,2.8"/>
                                    <!--Code voor tekst naast profiel foto-->
